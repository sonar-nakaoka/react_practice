{
  "name": "react_practice",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "workspaceFolder": "/workspaces/react_practice",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    // Windows の場合
    "source=.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    // 事前にホストマシン側で、touch ~/.claude.json を実行してファイルを作成しておくこと
    // claudeの認証情報系ファイルをマウント。これでコンテナをリビルドしても再ログイン求められなくなる
    "source=.claude.json,target=/home/vscode/.claude.json,type=bind,consistency=cached"
  ],
  "postCreateCommand": ".devcontainer/post_create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  }
}
